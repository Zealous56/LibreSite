mixin topnavbar(curPage)
    - var index = 0
    each item in lList
        if(item == curPage)
            a(href= lListFilenames[index]).active= item
        else
            a(href= lListFilenames[index])= item
        - index++

mixin dropdown(curPage)
    .dropdown-content
        ul
            - var index = 0
            each item in lList
                if(item != curPage)
                    li
                        a(href= lListFilenames[index])= item
                - index++

mixin sidebar-body(header, links)
    - var hrefIndex = 0;
    .sidebar-body
        h1= header
        ul
            each link in links
                li
                    a(href= '#' + hrefIndex)= link.ref
                - hrefIndex++

mixin container-body(posts)
    - var hrefIndex = 0;
    each post in posts
        .post(id= hrefIndex)
            h1= post.header
            p= post.content
        - hrefIndex++
    .jumptotop
        a(href= '#top') Back to top of page