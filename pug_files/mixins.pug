mixin topnavbar(curPage, list)
    each item in list
        if(item.text == curPage)
            a(href= item.ref).active= item.text
        else
            a(href= item.ref)= item.text

mixin dropdown(curPage)
    .dropdown-content
        ul
            each item in leftList
                if(item.text != curPage)
                    li
                        a(href= item.ref)= item.text
            each item in rightList
                if(item.text != curPage)
                    li
                        a(href= item.ref)= item.text

mixin sidebar-body(header, links)
    - var hrefIndex = 0;
    .sidebar-body
        h1= header
        ul
            each link in links
                li
                    a(href= '#' + hrefIndex)= link.ref
                - hrefIndex++

mixin container-body(posts)
    - var hrefIndex = 0;
    each post in posts
        .post(id= hrefIndex)
            h1= post.header
            p= post.content
        - hrefIndex++
    .jumptotop
        a(href= '#top')= jumpText